---
layout: default
---

<div class="post">

	<header class="post-header">

		<h1 class="post-title">
			{% if page.link %}
				<a href="{{ page.link }}">{{ page.title }}</a>
			{% else %}
				{{ page.title }}
			{% endif %}
		</h1>

		<p class="post-meta">{{ page.date | date: "%b %-d, %Y" }}{% if page.author %} • {{ page.author }}{% endif %}{% if page.meta %} • {{ page.meta }}{% endif %}</p>
	</header>

	<article class="post-content">
		{{ content }}
	</article>

</div>