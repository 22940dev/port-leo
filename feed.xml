---
layout: null
---

<?xml version="1.0" encoding="utf-8" ?>
<feed xmlns="http://www.w3.org/2005/Atom">

	<title>{{ site.title | xml_escape }}</title>
	<subtitle>{{ site.description | xml_escape }}</subtitle>
	<link rel="alternate" href="{{ site.url }}/" />
	<link rel="self" href="{{ site.url | append: "/feed.xml" }}" />
	<rights>Copyright @ {{ site.time | date: '%Y' }}, Leonard Lamprecht</rights>
	<icon>/assets/favicon.png</icon>

	<author>
		<name>Leonard Lamprecht</name>
		<email>lamprechtleonard@gmail.com</email>
		<uri>https://twitter.com/{{ site.twitter }}</uri>
	</author>

	<updated>{{ site.time | date_to_xmlschema }}</updated>
	<id>{{ site.url }}/</id>
	<generator version="{{ jekyll.version }}">Jekyll</generator>

	{% for post in site.posts limit:40 %}

		{% assign content = post.content | replace: "&#8617;", "&#8617;&#xfe0e;" %}
		{% assign content = content | replace: "data-lang", "lang" %}
		{% assign content = content | replace: "<mark>", "<b>" | replace: "</mark>", "</b>" %}

		<entry>
			<title type="html">{{ post.title | xml_escape }}</title>
			<id>{{ post.url | prepend: site.url }}</id>
			<updated>{{ post.updated | date_to_xmlschema }}</updated>
			<published>{{ post.path | truncate: 20 | replace: "...", "" | replace: "_posts/", "" }}T10:00:00+02:00</published>
			<content type="html" xml:lang="en"><![CDATA[{{ content }}]]></content>
		</entry>

	{% endfor %}

</feed>