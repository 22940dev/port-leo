---
layout: null
---

<?xml version="1.0" encoding="utf-8" ?>
<feed xmlns="http://www.w3.org/2005/Atom">

	<title>{{ site.title | xml_escape }}</title>
	<subtitle>{{ site.description | xml_escape }}</subtitle>
	<link href="{{ site.url }}" />
	<rights>Copyright @ {{ site.time | date: '%Y' }}, {{ site.author }}</rights>
	<icon>/assets/favicon.png</icon>

	<author>
		<name>{{ site.author }}</name>
		<email>{{ site.email | xml_escape }}</email>
		<uri>https://twitter.com/{{ site.twitter }}</uri>
	</author>

	<updated>{{ site.time | date_to_xmlschema }}</updated>
	<id>{{ site.url }}</id>
	<generator version="{{ jekyll.version }}">Jekyll</generator>

	{% for post in site.posts limit:40 %}

		<entry>
			<title>{{ post.title | xml_escape }}</title>
			<id>{{ post.url | prepend: site.url }}</id>
			<updated>{{ post.date | date_to_xmlschema }}</updated>
			<content xml:lang="en">{{ post.content | replace: '&#8617;', '&#8617;&#xfe0e;' | xml_escape }}</content>
		</entry>

	{% endfor %}

</feed>